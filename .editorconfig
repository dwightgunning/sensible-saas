root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 4

[*.py]
insert_final_newline = true

[*.json]
indent_size = 2
insert_final_newline = true

[*.yml]
indent_size = 2
insert_final_newline = true

[*.yaml]
indent_size = 2
insert_final_newline = true

[Makefile]
indent_style = tab

[Dockerfile]
indent_size = 2
insert_final_newline = true
